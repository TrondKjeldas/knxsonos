<?xml version="1.0"?>
<configuration>
  <knx url="ip:localhost"/>
  <zone name="Living Room">
    <mapping groupAddress="4/0/2" command="play"/>
    <mapping groupAddress="4/0/1" command="pause"/>
    <mapping groupAddress="4/0/0" command="previous"/>
    <mapping groupAddress="4/0/3" command="next"/>
    <mapping groupAddress="4/0/4" command="volume+"/>
    <mapping groupAddress="4/0/5" command="volume-"/>
    <mapping groupAddress="4/0/9" command="morgen"/>
    <mapping groupAddress="4/0/10" command="nested"/>
    <macro name="morgen">
        <action command="P3 radio"/>
        <action command="volumeSet" param="30"/>
    </macro>
    <macro name="kveld">
        <action command="P2 radio"/>
        <action command="volumeSet" param="20"/>
    </macro>
    <macro name="nested">
        <action command="morgen"/>
        <action command="kveld"/>
    </macro>
  </zone>
  <zone name="BRisa Media Renderer">
    <mapping groupAddress="5/1/1" command="play"/>
    <mapping groupAddress="5/1/1" command="pause"/>
    <mapping groupAddress="5/1/2" command="previous"/>
    <mapping groupAddress="5/1/3" command="next"/>
    <mapping groupAddress="5/1/4" command="volume+"/>
    <mapping groupAddress="5/1/5" command="volume-"/>
  </zone>
</configuration>
